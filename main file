                print("Takeoff!")
                countdown(0,0,5) #0,0,5
                print("You are now back in orbit captain")

        def backFromPlanet():
            
            #cls()
            global inventory
            global money
            global health
            global discovered
            global count_pop1
            global count_pop2
            global t3_exist
            global t2_exist
            global t1_exist
